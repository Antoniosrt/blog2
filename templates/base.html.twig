<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Spartan&display=swap">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />

    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light" style="height: 100px;">
    <a class="navbar-brand" href="{{ path('blog_homepage') }}">
        <i style="color: #444; font-size: 2rem;" class="pb-1 fad fa-cauldron"></i>
        <p class=" d-inline font-weight-bold" style="color: #444;">Home</p>
    </a>
    <a class="navbar-link" href="{{ path('blog_postagem.list') }}">
        <i style="color: #444; font-size: 2rem;" class=" fad fa-cauldron"></i>
        <p class=" d-inline font-weight-bold" style="color: #444;">Postagens</p>
    </a>
    {% if is_granted('ROLE_ADMIN') %}
        ,
    <a class="navbar-link" href="{{ path('blog_postagem.create') }}">
        <i style="color: #444; font-size: 2rem;" class=" fad fa-cauldron"></i>

        <p class=" d-inline font-weight-bold" style="color: #444;"> Novo post</p>
    </a>
        ,
        <a class="navbar-link" href="{{ path('createCategory') }}">
            <i style="color: #444; font-size: 2rem;" class=" fad fa-cauldron"></i>

            <p class=" d-inline font-weight-bold" style="color: #444;"> Nova categoria</p>
        </a>
        ,
        <a class="navbar-link" href="{{ path('dashboard') }}">
            <i style="color: #444; font-size: 2rem;" class=" fad fa-cauldron"></i>

            <p class=" d-inline font-weight-bold" style="color: #444;"> Controle de usu√°rio</p>
        </a>
    {% endif %}
    {% if app.user %}
        <a href="{{ path('app_logout') }}" class="btn btn-dark ml-auto" style="color: white;">Logout</a>
      {% else %}
        <a href="{{ path('app_login') }}" class="btn btn-dark ml-auto" style="color: white;">Login</a>
    {% endif %}

</nav>

{% block body %}
    {% endblock %}

<footer class="mt-5 p-3 text-center">
</footer>
{% block javascripts %}{% endblock %}
</body>
</html>